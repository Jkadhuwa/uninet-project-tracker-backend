{
  "name": "uninet-project-tracker-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Jkadhuwa/uninet-project-tracker-backend.git",
  "author": "Jkadhuwa <justinemsinda@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec babel-node src/index.js",
    "lint": "eslint . --ext .js",
    "pretest": "NODE_ENV=test yarn migrate:undo && NODE_ENV=test yarn migrate yarn seed:undo && NODE_ENV=test yarn seed",
    "test": "jest --coverage --config ./jest.config.json --detectOpenHandles --forceExit",
    "migrate": "sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo:all",
    "seed": "sequelize db:seed:all",
    "seed:undo": "sequelize db:seed:undo:all"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^4.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.4",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.11",
    "sequelize-cli": "^5.5.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "babel-jest": "^26.0.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  },
  "lint-staged": {
    "src/**/*.(js)": "yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "reporter": [
    "clover",
    "html",
    "text"
  ]
}
